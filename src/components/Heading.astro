---
import { Size } from "../types";

interface Props {
  size?: Size;
  as?: string;
}

const { size = Size.MD, as: Element = "h1" } = Astro.props;

const map = {
  [Size.XS]: "text-md sm:text-lg md:text-xl",
  [Size.SM]: "text-lg sm:text-xl md:text-2xl leading-normal tracking-tight",
  [Size.MD]: "text-xl sm:text-2xl md:text-3xl tracking-tight",
  [Size.LG]: "text-2xl sm:text-3xl md:text-4xl tracking-tighter",
  [Size.XL]: "text-3xl sm:text-3xl md:text-5xl leading-tight tracking-tighter",
};
---

<Element class:list={["font-display", "font-bold", map[size]]}>
  <slot />
</Element>
