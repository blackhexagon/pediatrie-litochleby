---
import { Size } from "../types";

interface Props {
  size?: Size;
  as?: string;
}

const { size = Size.MD, as: Element = "h1" } = Astro.props;

const map = {
  [Size.XS]: "text-xg",
  [Size.SM]: "text-2xl leading-normal",
  [Size.MD]: "text-3xl",
  [Size.LG]: "text-4xl",
  [Size.XL]: "text-3xl md:text-5xl leading-tight",
};
---

<Element class:list={["font-serif", "font-bold", map[size]]}>
  <slot />
</Element>
