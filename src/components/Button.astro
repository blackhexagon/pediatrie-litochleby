---
interface Props {
  href: string;
  secondary: boolean;
}

const { href, secondary = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    "font-display uppercase text-sm leading-none inline-flex items-center  font-bold rounded-full py-4 px-10 transition-all",
    secondary
      ? "bg-amber-200 text-purple-950 hover:bg-amber-100 focus:bg-amber-100"
      : "bg-amber-400 text-purple-950 hover:bg-amber-300 focus:bg-amber-300",
  ]}
>
  <slot />
</a>
